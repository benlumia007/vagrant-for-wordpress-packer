{
  "variables": {
      "template": "ubuntu-20.04-amd64",
      "cpus": "2",
      "memory": "2048",
      "disk_size": "65536",
      "headless": "false",
      "checksum_type": "sha256",
      "checksum_url": "http://cdimage.ubuntu.com/ubuntu-legacy-server/releases/20.04.1/release/SHA256SUMS",
      "image_url": "http://cdimage.ubuntu.com/ubuntu-legacy-server/releases/20.04.1/release/ubuntu-20.04.1-legacy-server-amd64.iso"
  },
  "builders": [
      {
          "iso_url": "{{ user `image_url` }}",
          "iso_checksum_type": "{{ user `checksum_type` }}",
          "iso_checksum_url": "{{ user `checksum_url` }}",

          "type": "parallels-iso",
          "guest_os_type": "ubuntu",
          "disk_size": "{{ user `disk_size` }}",
          "boot_wait": "10s",
          "http_directory": "http",
          "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
          "output_directory": "builds/{{ user `template` }}-parallels",
          "ssh_port": 22,
          "ssh_wait_timeout": "10000s",
          "ssh_username": "vagrant",
          "ssh_password": "vagrant",

          "prlctl_version_file": ".prlctl_version",
          "vm_name": "{{ user `template` }}-parallels",

          "parallels_tools_flavor": "lin",
          "prlctl": [
              [ "set", "{{.Name}}", "--memsize", "{{ user `memory` }}" ],
              [ "set", "{{.Name}}", "--cpus", "{{ user `cpus` }}" ]
          ],
          "boot_command": [
              "<esc><wait>",
              "<esc><wait>",
              "<enter><wait>",
              "/install/vmlinuz<wait>",
              " auto<wait>",
              " console-setup/ask_detect=false<wait>",
              " console-setup/layoutcode=us<wait>",
              " console-setup/modelcode=pc105<wait>",
              " debconf/frontend=noninteractive<wait>",
              " debian-installer=en_US.UTF-8<wait>",
              " fb=false<wait>",
              " initrd=/install/initrd.gz<wait>",
              " kbd-chooser/method=us<wait>",
              " keyboard-configuration/layout=USA<wait>",
              " keyboard-configuration/variant=USA<wait>",
              " locale=en_US.UTF-8<wait>",
              " netcfg/get_domain=vm<wait>",
              " netcfg/get_hostname=sandbox<wait>",
              " grub-installer/bootdev=/dev/sda<wait>",
              " noapic<wait>",
              " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
              " -- <wait>",
              "<enter><wait>"
          ]
      }
  ],
  "provisioners": [
      {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
          "expect_disconnect": true,
          "scripts": [
              "scripts/setup.sh",
              "scripts/update.sh",
              "scripts/packages.sh",
              "scripts/mysql.sh",
              "scripts/mailhog.sh",
              "scripts/php-custom.sh",
              "scripts/sshd.sh",
              "scripts/sudoers.sh",
              "scripts/vagrant.sh",
              "scripts/parallels.sh",
              "scripts/composer.sh",
              "scripts/wp-cli.sh"
          ],
          "type": "shell"
      }
  ],
  "post-processors": [
      {
          "compression_level": "8",
          "output": "builds/{{ user `template` }}-parallels.box",
          "type": "vagrant"
      }
  ]
}